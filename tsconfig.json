{
    "version": "2.0.3",
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": ["es6"]
    },
    "include": [
        "packages/async-event-dispatcher/src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "coverage",
        "node_modules"
    ],
    "types": [
        "jasmine",
        "node",
        "mocha",
        "chai"
    ]
}
